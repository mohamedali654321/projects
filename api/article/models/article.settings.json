{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "archive",
        "draft"
      ]
    },
    "publish_at": {
      "type": "datetime"
    }
  }
}
